{
  "name": "@iblock/server",
  "version": "1.0.0",
  "description": "iBlock Core Server",
  "main": "src/index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "type": "module",
  "scripts": {
    "start": "pm2 start ecosystem.config.cjs --daemon",
    "dev": "cross-env NODE_ENV=development nodemon --experimental-modules --experimental-specifier-resolution=node src/index.js",
    "deploy-dev": "cross-env NODE_ENV=development DISABLE_ESLINT_PLUGIN=true nodemon -L src/index.js",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "docker": "docker-compose -f docker-compose.yml up --build -d",
    "sniff-skill-mints": "NODE_ENV=development node --experimental-modules --experimental-specifier-resolution=node src/workers/sniff-skill-mints.js"
  },
  "keywords": [],
  "dependencies": {
    "@ethereumjs/common": "^2.5.0",
    "@ethereumjs/tx": "^3.3.2",
    "axios": "^0.27.1",
    "bcryptjs": "^2.4.3",
    "bignumber.js": "^9.0.1",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cross-env": "^7.0.0",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "ethers": "^5.5.3",
    "express": "^4.17.1",
    "express-openid-connect": "^2.7.2",
    "express-rate-limit": "^5.0.0",
    "fast-xml-parser": "^3.19.0",
    "helmet": "^4.1.0",
    "http-status": "^1.4.0",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "keythereum": "^1.2.0",
    "madge": "^5.0.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "nconf": "^0.11.3",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.3.1",
    "passport-custom": "^1.1.1",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth2-refresh": "^2.1.0",
    "passport-strategy": "^1.0.0",
    "pg": "^8.6.0",
    "pm2": "^5.1.0",
    "secure-random": "^1.1.2",
    "sequelize": "^6.6.5",
    "socket.io": "^4.1.3",
    "typescript": "^4.5.5",
    "uuid": "^3.4.0",
    "validator": "^13.0.0",
    "web3": "^1.6.0",
    "web3-utils": "^1.6.1",
    "winston": "^3.4.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-security": "^1.4.0",
    "faker": "^5.1.0",
    "jest": "^26.0.1",
    "lint-staged": "^11.0.0",
    "node-mocks-http": "^1.8.0",
    "nodemon": "^2.0.0",
    "supertest": "^6.0.1"
  }
}
